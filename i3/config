###################################
### I3 config from Nico Balbach ###
###################################


############# Autorun #############
exec --no-startup-id nm-applet
exec --no-startup-id /usr/lib64/polkit-gnome/polkit-gnome-authentication-agent-1
### i3bar (+ i3status) ###
bar {
	font pango: FontAwesome Bold 10
	i3bar_command i3bar -t
        status_command i3status --config ~/.config/i3/i3status.conf
        position top

        colors {
            background #00000000

            focused_workspace #fafafa #00000000 #fafafa
            active_workspace #fafafacc #fafafa00 #fafafacc
            inactive_workspace #fafafa00 #5294e200 #fafafacc
            urgent_workspace #ff5757 #ff5757 #fafafa
        }
}
### Compositor ###
exec --no-startup-id compton
### Wallpaper ###
exec --no-startup-id nitrogen --restore

########### Default keys ###########
### Mod key ###
set $mod Mod4
### Vim like navigation ###
set $up k
set $down j
set $left h
set $right l
### Optional arrow navigation ###
set $up_opt Up
set $down_opt Down
set $left_opt Left
set $right_opt Right



############ Workspaces #############
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"



############ Navigation ############
### Focus ###
bindsym $mod+$up focus up
bindsym $mod+$up_opt focus up
bindsym $mod+$down focus down
bindsym $mod+$down_opt focus down
bindsym $mod+$left focus left
bindsym $mod+$left_opt focus left
bindsym $mod+$right focus right
bindsym $mod+$right_opt focus right

### Prevent focus change on hover
focus_follows_mouse no

### Move focused ###
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$up_opt move up
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$down_opt move down
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$left_opt move left
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+$right_opt move right

### Open workspace ###
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10



############ Modifier ###############
### Close focused ###
bindsym $mod+Shift+q kill

### Fullscreen focused ### 
bindsym $mod+f fullscreen toggle

### Floating ###
# toggle
bindsym $mod+Shift+space floating toggle
# toggle focus tiling / floatin
bindsym $mod+space focus mode_toggle
# drag with mod+mouse
floating_modifier $mod 

### Move to workspace ###
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

### Move workspace ###
bindsym $mod+y move workspace to output left
bindsym $mod+x move workspace to output right

### Split view ###
bindsym $mod+numbersign split v
bindsym $mod+plus split h

### Resize ###
mode "resize" {
	# Resize #
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $up_opt resize shrink height 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $down_opt resize grow height 10 px or 10 ppt
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $left_opt resize shrink width 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt
        bindsym $right_opt resize grow width 10 px or 10 ppt

        # Exit # 
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
### Resize focused ###
bindsym $mod+r mode "resize"



############## Shortcuts ###############
### Config ###
# Reload configuration #
bindsym $mod+Shift+c reload
# Restart i3 #
bindsym $mod+Shift+r restart

### Exit i3 ###
mode "exit" {
	# Exit #
	bindsym y mode "default"; exec i3-msg exit

        # Cancel # 
        bindsym Escape mode "default"; exec killall i3-nagbar
        bindsym n mode "default"; exec killall i3-nagbar
}
### Resize focused ###
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you want to logout?.'  -b 'No' 'i3-msg mode default; killall i3-nagbar' -b 'Yes' 'i3-msg exit'"; mode "exit"

### Launch programm (rofi) ###
bindsym $mod+d exec --no-startup-id rofi -show drun

### Terminal ###
bindsym $mod+Return exec i3-sensible-terminal

### Lock screen ###
bindsym $mod+Shift+s exec i3lock -c 000000 

### Print screen ###
bindsym Print exec scrot -q 100

### Backlight ###
# Note: Use eighter xbacklight or light #
# xbacklight #
# bindsym XF86MonBrightnessUp exec xbacklight -inc 10 
# bindsym XF86MonBrightnessDown exec xbacklight -dec 10 
# light #
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

### Sound ###
# Raise Volume #
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
# Lower Volume #
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle-mute # Toggle muting

### Media Player ###
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next


########## Styling ##########
client.focused         	#ddddddaa #ddddddaa #ddddddaa #ffffff #ddddddaa      
client.focused_inactive #243035 #243035 #243035 #243035 #243035 
client.unfocused        #243035 #243035 #243035 #243035 #243035 
client.urgent           #ef630b #ef630b #ef630b #ef630b #ef630b 
client.background       #000000


### i3-gaps ###
for_window [class="^.*"] border pixel 1
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences$"] floating enable

smart_borders no_gaps
#smart_gaps on
gaps inner 20
gaps outer 20
